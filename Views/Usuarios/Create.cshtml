@model Inmobiliaria.Web.Models.Usuario
@{
    ViewData["Title"] = "Nuevo usuario";
}
<h1 class="h1">Nuevo usuario</h1>
<partial name="~/Views/Shared/_FormSummary.cshtml" />

<form method="post" class="form">
    <div class="row">
        <label>Nombre</label>
        <input asp-for="Nombre" required />
    </div>
    <div class="row">
        <label>Apellido</label>
        <input asp-for="Apellido" required />
    </div>
    <div class="row full">
        <label>Email</label>
        <input asp-for="Email" type="email" required />
    </div>
    <div class="row">
        <label>Rol</label>
        <select asp-for="Rol">
            <option value="Empleado" selected>Empleado</option>
            <option value="Admin">Admin</option>
        </select>
    </div>
    <div class="row">
        <label>Contrase√±a inicial</label>
        <input name="password" type="password" required />
    </div>

    <div class="form-actions full">
        <button class="btn btn-primary" type="submit">Crear</button>
        <a class="btn" asp-action="Index">Cancelar</a>
    </div>
</form>
