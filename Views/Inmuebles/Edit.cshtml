@model Inmobiliaria.Web.Models.Inmueble
@{ var propietarios = (IEnumerable<Inmobiliaria.Web.Models.Propietario>)ViewBag.Propietarios; var tipos=(IEnumerable<Inmobiliaria.Web.Models.TipoInmueble>)ViewBag.Tipos; }
<h2>Editar Inmueble</h2>
<form method="post">
  <input type="hidden" asp-for="Id"/>
  <div><label>Propietario</label>
    <select asp-for="PropietarioId">
      @foreach(var p in propietarios){ <option value="@p.Id" selected="@(p.Id==Model.PropietarioId)">@p.Apellido, @p.Nombre</option> }
    </select>
  </div>
  <div><label>Direcci√≥n</label><input asp-for="Direccion" required/></div>
  <div><label>Uso</label>
    <select asp-for="Uso">
      <option selected="@(Model.Uso=="Residencial")">Residencial</option>
      <option selected="@(Model.Uso=="Comercial")">Comercial</option>
    </select>
  </div>
  <div><label>Tipo</label>
    <select asp-for="TipoId">
      @foreach(var t in tipos){ <option value="@t.Id" selected="@(t.Id==Model.TipoId)">@t.Nombre</option> }
    </select>
  </div>
  <div><label>Ambientes</label><input asp-for="Ambientes" type="number" min="1" required/></div>
  <div><label>Precio</label><input asp-for="Precio" type="number" step="0.01" required/></div>
  <div><label>Disponible</label><input asp-for="Disponible" type="checkbox"/></div>
  <button type="submit">Guardar</button> <a asp-action="Index">Volver</a>
</form>
