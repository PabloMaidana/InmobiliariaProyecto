@model IEnumerable<Inmobiliaria.Web.Models.Contrato>
<h2>Contratos</h2>
<p><a asp-action="Create">Nuevo</a> | <a asp-action="PorVencer" asp-route-dias="30">Por vencer (30 d√≠as)</a></p>
<table class="table">
  <thead><tr><th>ID</th><th>Inmueble</th><th>Inquilino</th><th>Monto</th><th>Inicio</th><th>Fin</th><th>Finalizado</th><th>Multa</th><th></th></tr></thead>
  <tbody>
  @foreach(var c in Model){
    <tr>
      <td>@c.Id</td><td>@c.InmuebleId</td><td>@c.InquilinoId</td><td>@c.Monto</td><td>@c.FechaInicio</td><td>@c.FechaFin</td><td>@c.FinalizadoAnticipadoEn</td><td>@c.Multa</td>
      <td>
        <form asp-action="Terminar" method="post" style="display:inline">
          <input type="hidden" name="id" value="@c.Id"/><input type="date" name="fechaEfectiva" required/>
          <button type="submit">Terminar con multa</button>
        </form>
      </td>
    </tr>
  }
  </tbody>
</table>
