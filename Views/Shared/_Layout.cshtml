<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="topbar">
        <div class="container nav">
            <div class="brand">
                <span class="brand-badge">üè¢</span>
                <span>PROYECTO INMOBILIARIA</span>
            </div>
            <nav class="nav spacer">
                <a asp-controller="Home" asp-action="Index">Inicio</a>
                <a asp-controller="Propietarios" asp-action="Index">Propietarios</a>
                <a asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
                <a asp-controller="TiposInmueble" asp-action="Index">Tipos</a>
                <a asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
                <a asp-controller="Contratos" asp-action="Index">Contratos</a>
                @if (User.IsInRole("Admin")) {
                    <a asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                }
                <a asp-controller="Usuarios" asp-action="Perfil">Mi perfil</a>
            </nav>
            <div>
                @if (User?.Identity?.IsAuthenticated ?? false) {
                    <a class="btn btn-soft" asp-controller="Auth" asp-action="Logout">Salir (@User.Identity!.Name)</a>
                } else {
                    <a class="btn btn-primary" asp-controller="Auth" asp-action="Login">Entrar</a>
                }
            </div>
        </div>
    </header>

    <main class="page">
        <div class="card">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
        <footer class="footer">
            ¬© @DateTime.Now.Year ‚Äî Inmobiliaria.
        </footer>
    </main>
</body>
</html>

</html>
